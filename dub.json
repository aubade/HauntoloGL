			],
			"dependencies":{
				"bindbc-opengl":"~>1.1.0"
			}
		},
		{
			"name":"testApp-es",
			"targetType":"executable",
			"versions":[
				"GLES_20","TESTAPP"
			],
			"dependencies":{
				"bindbc-gles":"~>0.0.3"
			}
		},
		{
			"name":"testApp-gl",
			"targetType":"executable",
			"versions":[
				"GL_20","GL_ARB", "GL_AllowDeprecated","TESTAPP"
			],
			"dependencies":{
				"bindbc-opengl":"~>1.1.0"
			}
		}
	],
	"buildTypes": {
        "debug": { "buildOptions": ["debugMode", "optimize"] },
        "release": { "buildOptions": ["releaseMode", "optimize", "inline"],
