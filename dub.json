	"name": "hauntologl",
	"configurations": [
		{
			"name":"hauntologl-es",
			"targetType":"library",
			"versions":[
				"GLES_20"
			],
			"dependencies":{
				"bindbc-gles":"~>0.0.3"
			}
		},
		{
			"name":"hauntologl",
			"targetType":"library",
